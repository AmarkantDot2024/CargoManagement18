
@{
    ViewBag.Title = "CargoTypeList";
}
<h2 class="text-2xl font-semibold text-center text-gray-800 mb-4">CargoType List</h2>


<!-- Employee Table -->
<div class="overflow-x-auto container">

    <div class="flex justify-between items-center my-6">
        <!-- Back Button -->
        <a href="@Url.Action("AdminDashboard", "Admins")"
           class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out">
            Back to DashBoard
        </a>

        <!-- Add New Cargotype Button -->
        <a href="@Url.Action("CreateCargoType", "Admins")"
           class="px-4 py-2 bg-green-600 text-white rounded-lg shadow-md hover:bg-green-700 transition duration-300 ease-in-out">
            Create CargoType
        </a>
    </div>

    <table class="w-full table-auto border-collapse text-sm font-semibold">
        <thead>
            <tr class="bg-blue-600 text-white">
                <th class="p-3 text-left">Cargo Name</th>
                <th class="p-3 text-left">Weight</th>
                <th class="p-3 text-left">Price</th>
                <th class="p-3 text-left">Extra Weight</th>
                <th class="p-3 text-left">Extra Price</th>

                <th class="p-3 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-b hover:bg-gray-100">
                    <td class="p-3 text-gray-800">@item.Name</td>
                    <td class="p-3 text-gray-800">@item.Weight</td>
                    <td class="p-3 text-gray-800">₹ @item.Price</td>
                    <td class="p-3 text-gray-800">@item.ExtraWeight</td>
                    <td class="p-3 text-gray-800">₹ @item.ExtraPrice</td>
                    <td class="p-3 flex justify-center space-x-2">
                        <a href="@Url.Action("EditCargoType", "Admins", new { id = item.Id })" class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add New Cargotype Button -->
<div class="mt-4 text-center">
    <a href="@Url.Action("CreateCargoType", "Admins")" class="w-1/2 bg-gray-600 text-white py-2 px-8 rounded-md text-sm text-center hover:bg-gray-700 transition duration-300">Create CargoType</a>
</div>