
@{
    ViewBag.Title = "LoggedIn";
}

<h2>LoggedIn</h2>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Session Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen font-sans">

    <!-- Main Content -->
    <div class="bg-white shadow-lg rounded-lg p-8 text-center">
        <h1 class="text-2xl font-bold text-gray-700 mb-4">
            You are logged in as
            <span class="text-blue-500">
                <asp:Label ID="lblUsername" runat="server" Text="">@Session["UserName"]</asp:Label>
            </span>
        </h1>
        <p class="text-gray-600 text-lg mb-6">Do you want to logout?</p>
        <a href="@Url.Action("Logout", "CargoApp")" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded">Logout</a>

    </div>

</body>
</html>

