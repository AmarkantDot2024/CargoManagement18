@{
    ViewBag.Title = "CargoHomePage";
}

<div style="min-height: 100vh; background-color: #f8f9fa;">
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #37517e;
        }

        .navbar-brand {
            color: white;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            color: white;
            font-weight: bold;
        }

            .navbar-nav .nav-link:hover {
                color: #f8f9fa;
                text-decoration: underline;
            }

        .container {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            background: #e9ecef;
            color: #333;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        footer {
            margin-top: 20px;
            background-color: #37517e;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

            footer a {
                color: white;
                text-decoration: underline;
            }

        h1 {
            font-size: 2rem;
            font-weight: bold;
            color: #37517e;
        }

        p {
            font-size: 1rem;
            color: #555;
        }

        .btn {
            padding: 8px 16px;
            font-size: 1rem;
        }
    </style>

    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Cargo-Service</a>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-5">
        <main role="main" class="pb-3 text-center">
            <h1>Welcome to Cargo Service</h1>
            <p>Manage your cargo services seamlessly with our platform.</p>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Admin Panel</h5>
                            <p class="card-text">Access admin-related functionalities here.</p>
                            <a href="@Url.Action("AdminLogin", "CargoApp")" class="btn btn-primary">Login</a><br />
                            
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Employee Portal</h5>
                            <p class="card-text">Log in to manage your cargo responsibilities.</p>
                            <a href="@Url.Action("EmployeeLogin", "CargoApp")" class="btn btn-success">Login</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Customer Area</h5>
                            <p class="card-text">Track orders and manage your cargo needs.</p>
                            <a href="@Url.Action("CustomerLogin", "CargoApp")" class="btn btn-info">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="py-2">
            &copy; 2024 Cargo Service - Privacy Policy <span><a href="@Url.Action("Index", "Admins")" class="d-inline-block mt-2">View Admins</a></span>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
</div>




