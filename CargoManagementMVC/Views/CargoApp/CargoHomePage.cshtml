
@{
    ViewBag.Title = "CargoHomePage";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cargo Service</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #37517e;
        }

        .navbar-brand {
            color: white;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: white;
            font-weight: bold;
        }

            .navbar-nav .nav-link:hover {
                color: #f8f9fa;
                text-decoration: underline;
            }

        footer {
            margin-top: 20px;
            background-color: #37517e;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

            footer a {
                color: white;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Cargo-service</a>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-5">
        <main role="main" class="pb-3">
            <h1 class="text-center">Welcome to Cargo Service</h1>
            <p class="text-center">Manage your cargo services seamlessly with our platform.</p>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Admin Panel</h5>
                            <p class="card-text">Access admin-related functionalities here.</p>
                            <a href="@Url.Action("AdminLogin", "CargoApp")" class="btn btn-primary">Login</a><br />
                            <a href="@Url.Action("Index", "Admins")" class="">View Admins</a>

                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Employee Portal</h5>
                            <p class="card-text">Log in to manage your cargo responsibilities.</p>
                            <a href="@Url.Action("EmployeeLogin", "CargoApp")" class="btn btn-success">Login</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Customer Area</h5>
                            <p class="card-text">Track orders and manage your cargo needs.</p>
                            <a href="@Url.Action("CustomerLogin", "CargoApp")" class="btn btn-info">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            &copy; 2024 Cargo Service - <a href="#">Privacy Policy</a>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
